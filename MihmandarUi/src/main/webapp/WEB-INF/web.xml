	<!-- Vaadin servlet -->
	<servlet>
		<servlet-name>MihmandarUi</servlet-name>
		<servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
		<init-param>
			<param-name>UI</param-name>
			<param-value>tech.mihmandar.ui.presentation.common.MihmandarApplication</param-value>
		</init-param>
		<init-param>
			<param-name>productionMode</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>widgetset</param-name>
			<param-value>com.vaadin.MihmandarWidgetset</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>MihmandarUi</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
